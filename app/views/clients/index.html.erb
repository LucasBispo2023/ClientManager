<h1 class="display-5 fw-bold"><%= t('title.index')%></h1>
  <table class="table table-hover table-bordered table-responsive">
    <thead>
      <tr>
            <th scope="col"><%=  link_to Client.human_attribute_name(:id), :sort => "id"%></th>
            <th><%= link_to  Client.human_attribute_name(:first_name), :sort => "first_name"%></th>
            <th><%=  link_to Client.human_attribute_name(:last_name), :sort => "last_name"%></th>
            <th><%=  link_to Client.human_attribute_name(:email), :sort => "email" %></th>
            <th><%=  link_to Client.human_attribute_name(:telephone), :sort => "telephone" %></th>
            <th><%= link_to  Client.human_attribute_name(:address), :sort => "address" %></th>
            <th ><%= link_to  Client.human_attribute_name(:zip_code)%></th>
            <th >
                <%= link_to new_client_path, class: "btn btn-success btn-circle" do %>
                        <i class="fas fa-plus"></i>
                <% end %>
            </th>
      </tr>
    </thead>

    <tbody>
        <% @clients.each do |client| %>
        <tr>
            <td scope="row"> <%=client.id%> </td>
            <td> <%=client.first_name%> </td>
            <td> <%=client.last_name%> </td>
            <td> <%=client.email%> </td>
            <td> <%=client.telephone%> </td>
            <td> <%=client.address%> </td>
            <td> <%=client.zip_code%> </td>
            <td class="btn-group">
                <%= link_to client_path(client.id),method: :get,  class: "btn btn-success btn-circle" do %>
                    <i class="fas fa-search"></i>
                <% end %>

                <%= link_to edit_client_path(client.id),method: :get, class: "btn btn-success btn-warning" do %>
                    <i class="fas fa-edit"></i>
                <% end %>

                <%= button_to client_path(client.id), method: :delete, class: "btn btn-danger btn-circle",form: {style:"display:inline-block"}, data: {turbo_confirm: t('messages.confirm_with', item: "#{client.first_name} #{client.last_name}")} do %>
                    <i class="fas fa-trash"></i>
                <% end %>
             </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= paginate @clients %>

