<%= form_with(model:@client, local:true, data:{turbo: false},class:"row g-3") do |form| %>
  <div class="col-md-6">
    <%= form.label :first_name, class:"form-label"%>
    <%= form.text_field :first_name, class:"form-control"%>
  </div>
  <div class="col-md-6">
    <%= form.label :last_name, class:"form-label"%>
    <%= form.text_field :last_name, class:"form-control"%>
  </div>
  <div class="col-12">
    <%= form.label :address, class:"form-label"%>
    <%= form.text_field :address, class:"form-control"%>
  </div>
  <div class="col-12">
    <%= form.label :email, class:"form-label"%>
    <%= form.email_field :email, class:"form-control"%>
  </div>
  <div class="col-md-6">
    <%= form.label :telephone, class:"form-label"%>
    <%= form.text_field :telephone, class:"form-control", id:"telephone-field", maxlength: 14%>
  </div>
  <div class="col-md-2">
    <%= form.label :zip_code, class:"form-label"%>
    <%= form.text_field :zip_code, class:"form-control", id:"zip_code", maxlength: 10%>
  </div>
  <div class="col-md-4 d-flex" style="flex-direction:column-reverse">
     <%= form.submit t('message.submit'), class:"btn btn-success",style:"height:fit-content", id:"submit-button"%>
<%end%>
  </div>
  <hr>
  <div class="d-flex ms-auto" style="flex-direction:column-reverse">
     <%= link_to "Voltar",:back, class:"btn btn-primary",style:"height:fit-content;",id:"back-button"%>
  </div>

