<div class="card shadow mb-4">

  <% if @admin.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <ul>
        <% @admin.errors.full_messages.each do |message|%>
        <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary"><%= "#{action_message} #{@admin.model_name.human(counte: 1)}"%></h6>
  </div>
  
  <div  data-turbo="false" class="card-body">
<%= form_with(model: [ :admin_backoffice, @admin ], local:true) do |form| %>
      <div class="form-group row">
        <%= form.label :email, class:"form-group" %>
        <%= form.text_field :email, class:"form-control form-user"%>
      </div>

      <div class="form-group row">
        <%= form.label :password, class:"form-group"%>
        <%= form.text_field :password, type: "password", class: "form-control form-user", placeholder: "******" %>
      </div>

      <div class="form-group row">
        <%= form.label :password_confirmation, class:"form-group"%>
        <%= form.text_field :password_confirmation, type: "password", class: "form-control form-user", placeholder: "******" %>
      </div> <br />
      
      <button type="submit" href="#" class="btn btn-success btn-icon-split">
        <span class="icon text-white-50">
          <i class="fas fa-arrow-right"></i>
        </span>
        <span class="text"><%= t('messages.submit')%></span>
      </button>

    </div>
  <% end %>
